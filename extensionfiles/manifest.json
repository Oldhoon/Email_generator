{
    "name": "MailBot",
    "description": "AI-powered email writing assistant",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://mail.google.com/*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
          "resources": [ "icons/*" ],
          "matches": ["*://mail.google.com/*"]
        }
      ],
    "action": {
      "default_title": "Mailbot"
    }
  }